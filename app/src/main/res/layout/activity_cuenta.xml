<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlanco"
    android:focusableInTouchMode="true" >

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/linea_bar"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/blanco" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/colorBlanco"
        android:id="@+id/layoutMacroEsperaCuenta">

          <RelativeLayout
            android:id="@+id/layoutEsperaConvenios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
              >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:indeterminateTint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="Un momento..."
                android:textSize="18sp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nshabilitarCuenta"
        android:visibility="gone"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/lqwsdsdsdqwinear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:id="@+id/rlfragmentCuenta"
        android:background="@color/colorBlanco"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewpro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:text="Actualiza tu información y obtén los mejores beneficios:"
                android:textColor="@color/colorEditTextGris"
                android:textSize="18dp"
                android:textStyle="bold"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_nom_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="@color/colorEditTextGris">

                <EditText
                    android:id="@+id/editTextNomUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:windowSoftInputMode="stateHidden"
                    android:backgroundTint="@color/colorEditTextGris"
                    android:hint="Nombre Completo"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorEditTextGris"
                    android:textColorHint="@color/colorEditTextGris" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ced_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="@color/colorEditTextGris">

                <EditText
                    android:id="@+id/editTextCedUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:windowSoftInputMode="stateHidden"
                    android:backgroundTint="@color/colorEditTextGris"
                    android:hint="Cédula"
                    android:inputType="number"
                    android:textColor="@color/colorEditTextGris"
                    android:textColorHint="@color/colorEditTextGris" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ema_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="@color/colorEditTextGris">

                <EditText
                    android:id="@+id/editTextEmaUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:windowSoftInputMode="stateHidden"
                    android:backgroundTint="@color/colorEditTextGris"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorEditTextGris"
                    android:textColorHint="@color/colorEditTextGris" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_cel_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="@color/colorEditTextGris">

                <EditText
                    android:id="@+id/editTextCelUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:windowSoftInputMode="stateHidden"
                    android:backgroundTint="@color/colorEditTextGris"
                    android:hint="Número Teléfono"
                    android:inputType="number"
                    android:textColor="@color/colorEditTextGris"
                    android:textColorHint="@color/colorEditTextGris" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/labelCodfsdfntxxsacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:visibility="gone"
                android:textColor="@color/colorBlanco"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/editTextTelEmpleadoCuenta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/style_editext_cuadrangular_fondo_oscuro"
                android:hint="Tu teléfono"
                android:visibility="gone"
                android:editable="false"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:textColor="@color/colorLetraFondoEstrellado"
                android:textColorHint="@color/colorLetraFondoEstrellado"
                android:theme="@style/EditTextFondoBlanco" />


           <!-- <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />-->


            <Switch
                android:id="@+id/switchCercaniaConveniosCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:text="Notificar Ofertas y Descuentos"
                android:textColor="@color/colorEditTextGris"
                android:checked="true"
                android:textSize="15sp"
                android:visibility="gone"
                android:gravity="left"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/buttonSaveInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:text="Guardar infomación"
                android:textAllCaps="false"
                android:textColor="@color/colorBlanco"
                android:textSize="15sp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/textViewCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="Cerrar Sesion"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"
            app:layout_constraintVertical_bias="0.904" />

    </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

